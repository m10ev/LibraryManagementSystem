@model Data.Models.BorrowedBook

@{
    ViewData["Title"] = "Edit Borrowed Book";
}

<h1 class="text-center mb-4">Edit Borrowed Book</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow p-4" style="max-width: 600px; width: 100%;">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="BookID" />
            <input type="hidden" asp-for="MemberID" />

            <div class="form-group mb-3">
                <label asp-for="Book.Title" class="form-label fw-bold">Book</label>
                <input class="form-control" value="@Model.Book?.Title" disabled />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Member.FirstName" class="form-label fw-bold">Member</label>
                <input class="form-control" value="@Model.Member?.FirstName @Model.Member?.LastName" disabled />
            </div>

            <div class="form-group mb-3">
                <label asp-for="BorrowDate" class="form-label fw-bold">Borrow Date</label>
                <input asp-for="BorrowDate" class="form-control" type="date" value="@Model.BorrowDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="BorrowDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DueDate" class="form-label fw-bold">Due Date</label>
                <input asp-for="DueDate" class="form-control" type="date" value="@Model.DueDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ReturnDate" class="form-label fw-bold">Return Date</label>
                <input asp-for="ReturnDate" class="form-control" type="date"
                       value="@(Model.ReturnDate.HasValue ? Model.ReturnDate.Value.ToString("yyyy-MM-dd") : "")" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
