@model Data.Models.BorrowedBook

@{
    ViewData["Title"] = "Delete Borrowed Book";
}

<h1 class="text-center my-4">Delete Borrowed Book Record</h1>

<div class="container">
    <div class="row align-items-start">
        <div class="col-md-8">
            <h2 class="fw-bold">@Model.Book?.Title</h2>
            <h5 class="text-danger mb-2">Are you sure you want to delete this borrow record?</h5>

            <p class="text-muted mb-2">
                <strong>Member:</strong>
                <a asp-controller="Members" asp-action="Details" asp-route-id="@Model.MemberID" class="text-decoration-none">
                    @Model.Member?.FirstName @Model.Member?.LastName
                </a>
            </p>

            <p class="text-muted mb-2"><strong>Borrowed On:</strong> @Model.BorrowDate.ToString("dd-MM-yyyy")</p>
            <p class="text-muted mb-2"><strong>Due Date:</strong> @Model.DueDate.ToString("dd-MM-yyyy")</p>

            <p class="text-muted mb-2">
                <strong>Returned:</strong>
                @(Model.ReturnDate?.ToString("dd-MM-yyyy") ?? "Not Returned")
            </p>

            <form asp-action="Delete" asp-route-bookId="@Model.BookID" asp-route-date="@Model.BorrowDate.ToString("yyyy-MM-dd")" method="post" class="mt-4">
                <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
