@model Data.Models.Author

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mb-4">Delete Author</h1>

<h5 class="text-center text-danger">Are you sure you want to delete this author?</h5>

<div class="container">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl" alt="@Model.FirstName" class="img-fluid rounded shadow-sm" style="max-height: 300px;" />
        </div>
        <div class="col-md-8">
            <h2>@Model.FirstName @Model.LastName</h2>
            <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("dd-MM-yyyy")</p>
            <p><strong>Biography:</strong></p>
            <p>@Model.Biography</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
